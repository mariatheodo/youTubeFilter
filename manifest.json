{
  "name": "YouTube Filter",
  "version": "1.0",
  "manifest_version": 2,
  "description": "My first Chrome extension.",
  "homepage_url": "http://www.youtube.com",
  "browser_action": {
    "default_icon": "img/favicon-vflz7uhzw.ico",
    "default_title": "Click here!"
  },
  "content_scripts": [
    {
    	"matches": ["https://www.youtube.com/", "https://www.youtube.com/*"],
      "js": ["scripts/jquery.js", "scripts/myscript.js"],
      "run_at":"document_start"
    }],
  "permissions": [
      "activeTab",
      "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": ["scripts/background2.js"],
    "persistent": false
  }
}